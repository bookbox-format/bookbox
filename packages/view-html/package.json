{
  "name": "@bookbox/view-html",
  "version": "0.1.4",
  "description": "Bookbox view for html",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/esm/index.d.ts",
  "files": [
    "build",
    "README.md"
  ],
  "scripts": {
    "build-esm": "tsc -p tsconfig-publish-esm.json",
    "build-cjs": "tsc -p tsconfig-publish-cjs.json",
    "build": "npm run build-cjs; npm run build-esm; . scripts/copyStatic.sh",
    "dev": "npm run dev-prepare & npm run examples:dev & onchange -d 3000 'src/**/*' -- npm run build",
    "dev-prepare": "node scripts/devPrepare.js",
    "prepare": ". scripts/prepareTemplate.sh",
    "examples:build": "cd examples; ts-node elements-list.ts; cd -",
    "examples:dev": "onchange -d 3000 'src/**/*' 'examples/*.ts' 'node_modules/@bookbox/core/build/esm/index.js' 'node_modules/@bookbox/generator-js/build/esm/index.js' --no-exclude -- npm run examples:build"
  },
  "keywords": [
    "bookbox",
    "html"
  ],
  "dependenciesComment": "reorder dependencies for priority, last order will be actual",
  "dependencies": {
    "@bookbox/core": "0.1.1",
    "highlight.js": "^11.6.0",
    "katex": "^0.15.0"
  },
  "devDependencies": {
    "@bookbox/generator-js": "0.1.0",
    "@types/katex": "^0.14.0",
    "@types/node": "^17.0.40",
    "onchange": "^7.1.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vite-plugin-singlefile": "^0.9.0"
  },
  "author": "Alexandr Nikolaichev",
  "license": "MIT"
}
